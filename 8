def analyze_file(filename):
        try:
            with open(filename,'r') as file:
                content=file.read()
                sentences=content.count('.')+content.count('!')+content.count('?')
                words=len(content.split())
                char=len(content)
                
                print(f"{sentences} {words} {char}")
        except FileNotFoundError:
            print(f"This file {filename} doesnt have anything")

file = r"C:\Users\LENOVO\OneDrive\Desktop\example.txt"
analyze_file(file)    


def copytolower(source,target):
    try:
        with open(source,'r') as sr,open(target,'w') as tr:
            for line in sr:
                tr.write(line.lower())
        print(f"content successfully copied from {source} to {target} in lower case")
        with open(target,'r') as tr:
            num=sum(1 for line in tr)
            print(f"Lines copied are : {num}")
    except FileNotFoundError:
        print("nahi ha ")
source=r"E:\1.txt"
target=r"E:\target.txt"
copytolower(source,target)


student=open("check.txt",'a')
n=int(input("enter no of students"))
for i in range(0,n):
 name=input(f"enter student {i+1} name");
 rollno=input(f"enter student {i+1} roll no");
 branch=input(f"enter student {i+1} branch");
 student.write(name+" "+rollno+" "+branch+"\n")
student.close()

student=open("check.txt",'r')
content=student.read()
content=content.split('\n')

branch='ece'
for i in content[:-1]:
 std=i.split()
 if std[2]==branch:
     print(i)
